<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.collections.FXCollections?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.ColorPicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.TilePane?>
<?import javafx.scene.text.Font?>

<GridPane id="panel" hgap="10.0" prefHeight="750" prefWidth="1400" stylesheets="@styling.css" vgap="10.0"
          xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Lab6.Controller">
    <children>
        <BorderPane prefHeight="750.0" prefWidth="1400.0">
            <top>
                <Pane prefHeight="82.0" prefWidth="1400.0" styleClass="optionBar" stylesheets="@styling.css"
                      BorderPane.alignment="CENTER">
                    <children>
                        <Spinner fx:id="edgeNum" layoutX="540.0" layoutY="29.0" max="10" min="3" prefHeight="25.0"
                                 prefWidth="57.0" stylesheets="@styling.css">
                            <cursor>
                                <Cursor fx:constant="HAND"/>
                            </cursor>
                        </Spinner>
                        <Label contentDisplay="CENTER" layoutX="427.0" layoutY="31.0" prefHeight="20.0"
                               prefWidth="113.0" stylesheets="@styling.css" text="Figure Edges:" textFill="WHITE">
                            <font>
                                <Font name="Unispace-Bold" size="14.0"/>
                            </font>
                        </Label>
                        <Label contentDisplay="CENTER" layoutX="604.0" layoutY="31.0" prefHeight="20.0"
                               prefWidth="147.0" stylesheets="@styling.css" text="Figure Placement:" textFill="WHITE">
                            <font>
                                <Font name="Unispace-Bold" size="14.0"/>
                            </font>
                        </Label>
                        <ToggleButton fx:id="figurePlacement" layoutX="751.0" layoutY="30.0" mnemonicParsing="false"
                                      text="Random" textAlignment="CENTER">
                            <font>
                                <Font name="Unispace-Bold" size="12.0"/>
                            </font>
                        </ToggleButton>
                        <Label contentDisplay="CENTER" layoutX="819.0" layoutY="32.0" prefHeight="20.0"
                               prefWidth="123.0" stylesheets="@styling.css" text="Figure Colour:" textFill="WHITE">
                            <font>
                                <Font name="Unispace-Bold" size="14.0"/>
                            </font>
                        </Label>
                        <ColorPicker id="palette" fx:id="figureColour" layoutX="942.0" layoutY="30.0" prefHeight="25.0"
                                     prefWidth="136.0" stylesheets="@styling.css"/>
                    </children>
                </Pane>
            </top>
            <right>
                <Pane prefHeight="586.0" prefWidth="230.0" styleClass="customize" stylesheets="@styling.css"
                      BorderPane.alignment="CENTER">
                    <children>
                        <ChoiceBox id="choices" fx:id="figures" layoutX="41.0" layoutY="177.0" prefWidth="150.0"
                                   stylesheets="@styling.css" value="Polygon">
                            <cursor>
                                <Cursor fx:constant="HAND"/>
                            </cursor>
                            <items>
                                <FXCollections fx:factory="observableArrayList">
                                    <String fx:value="Polygon"/>
                                    <String fx:value="Node Shape"/>
                                </FXCollections>
                            </items>
                        </ChoiceBox>
                        <Label contentDisplay="CENTER" layoutX="38.0" layoutY="150.0" prefHeight="20.0"
                               prefWidth="157.0" stylesheets="@styling.css" text="Available Figures:">
                            <font>
                                <Font name="Unispace-Bold" size="14.0"/>
                            </font>
                        </Label>
                    </children>
                </Pane>
            </right>
            <center>
                <Canvas id="canvas" fx:id="canvas" height="586.0" width="1170.0" BorderPane.alignment="CENTER"/>
            </center>
            <bottom>
                <TilePane alignment="CENTER" focusTraversable="true" hgap="50.0" prefHeight="82.0" prefWidth="1400.0"
                          styleClass="optionBar" stylesheets="@styling.css" BorderPane.alignment="CENTER">
                    <children>
                        <Button fx:id="save" mnemonicParsing="false" onAction="#saveFigure" text="Save">
                            <font>
                                <Font name="Unispace-Bold" size="14.0"/>
                            </font>
                        </Button>
                        <Button fx:id="exit" mnemonicParsing="false" onAction="#exitApp" text="Exit">
                            <font>
                                <Font name="Unispace-Bold" size="14.0"/>
                            </font>
                        </Button>
                        <Button fx:id="load" mnemonicParsing="false" onAction="#loadFigure" text="Load">
                            <font>
                                <Font name="Unispace-Bold" size="14.0"/>
                            </font>
                        </Button>
                        <Button id="buttonBar" fx:id="reset" mnemonicParsing="false" onAction="#resetCanvas"
                                text="Reset">
                            <font>
                                <Font name="Unispace-Bold" size="14.0"/>
                            </font>
                        </Button>
                    </children>
                </TilePane>
            </bottom>
        </BorderPane>
    </children>
    <columnConstraints>
        <ColumnConstraints/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints/>
    </rowConstraints>

</GridPane>
